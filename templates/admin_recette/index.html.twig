{% extends 'base-admin.html.twig' %}

{% block title %}Recette index{% endblock %}

{% block body %}
    <h1>Recette index</h1>

    <a href="{{ path('app_admin_recette_new') }}">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recette in recettes %}
            <tr>
                <td>{{ recette.id }}</td>
                <td>{{ recette.titre }}</td>
                <td class="col-md-2"><img src="{{asset('img/recettes/' ~ recette.imageName )}}" alt="{{recette.titre}}" class="img-fluid"></td>
                <td>
                    <a href="{{ path('app_admin_recette_show', {'id': recette.id}) }}">show</a>
                    <a href="{{ path('app_admin_recette_edit', {'id': recette.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
