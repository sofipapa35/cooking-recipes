{% extends 'base-admin.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1>Categorie index</h1>
    <a href="{{ path('app_admin_categorie_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.titre }}</td>
                <td class="col-md-2"><img src="{{asset('img/categories/' ~ categorie.imageName)}}" alt="{{ categorie.imageName }}" class="img-fluid"></td>
                <td>
                    <a href="{{ path('app_admin_categorie_show', {'id': categorie.id}) }}">show</a>
                    <a href="{{ path('app_admin_categorie_edit', {'id': categorie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
