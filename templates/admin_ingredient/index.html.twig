{% extends 'base-admin.html.twig' %}

{% block title %}Ingredient index{% endblock %}

{% block body %}
    <h1>Ingredient index</h1>
    <a href="{{ path('app_admin_ingredient_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>ImageName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ingredient in ingredients %}
            <tr>
                <td>{{ ingredient.id }}</td>
                <td>{{ ingredient.titre }}</td>
                <td class="col-md-2"><img src="{{asset('img/ingredients/' ~ ingredient.imageName )}}" alt="{{ ingredient.imageName }}" class="img-fluid"></td>
                <td>
                    <a href="{{ path('app_admin_ingredient_show', {'id': ingredient.id}) }}">show</a>
                    <a href="{{ path('app_admin_ingredient_edit', {'id': ingredient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
