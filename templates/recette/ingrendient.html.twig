{% extends 'base.html.twig' %}

{% block title %}Ingredients |
	{{ing[0].titre}}
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center my-2">
		<div class="card col-md-4">
			<img src="{{asset('img/ingredients/' ~ ing[0].imageName)}}" class="card-img-top" alt="{{ing[0].titre}}">
			<div class="card-body">
				<h5 class="card-title text-center">{{ing[0].titre|capitalize}}</h5>
				<div class="card-text">{{ing[0].description|capitalize|raw}}</div>
			</div>
		</div>
	</div>

	{% if ing[0].recettes is not null and ing[0].recettes|length > 0 %}
		<h4>Autres recettes</h4>
		<div class="d-flex">
			{% for i in ing[0].recettes %}
				<div class="col-md-2 justify-content-center flex-wrap p-1">
					<a href="{{path('recette_detail', {id: i.id})}}">
						<div class="card h-100">
							<div class="slide-note">
								<img src="{{asset('img/recettes/' ~ i.imageName)}}" class="card-img-top" alt="{{i.titre}}">
								<div class="card-body">
									<h5>{{i.titre}}</h5>
								</div>
							</div>
						</div>
					</a>
				</div>
			{% endfor %}
		</div>
	{% endif %}
{% endblock %}
